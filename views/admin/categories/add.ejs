<!DOCTYPE html>
<html lang="en">
<%- include("../../head.ejs") %>

<body class="bg-gray-100">

  <div class="max-w-xl mx-auto px-4 py-8">

    <!-- PAGE TITLE -->
    <h1 class="text-2xl font-bold mb-6 text-gray-800">Add New Category</h1>


    <!-- ADD CATEGORY FORM -->
    <form action="/admin/categories/add" method="POST" class="bg-white p-6 rounded shadow space-y-4">

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">
          Category Name
        </label>
        <input
          type="text"
          name="name"
          placeholder="Electronics"
          required
          class="w-full border px-3 py-2 rounded focus:outline-none focus:ring focus:ring-blue-300"
        />
      </div>

      <div class="flex justify-end space-x-2">
        <a href="/admin/categories"
           class="px-4 py-2 border rounded hover:bg-gray-100 transition">
           Cancel
        </a>
        <button type="submit"
                class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition">
          Create
        </button>
      </div>

    </form>

  </div>

</body>
</html>
