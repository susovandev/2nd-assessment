<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<title>Admin Dashboard</title>

		<!-- Tailwind CDN -->
		<script src="https://cdn.tailwindcss.com"></script>
	</head>

	<body class="bg-gray-100">
		<div class="max-w-6xl mx-auto px-4 py-10">
			<!-- Header -->
			<h1 class="text-3xl font-bold text-gray-800 mb-8">Admin Dashboard</h1>

			<!-- Stats Cards -->
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
				<!-- Total Products -->
				<div class="bg-white rounded-lg shadow p-6">
					<h2 class="text-sm text-gray-500 uppercase">Total Products</h2>
					<p class="text-4xl font-bold text-blue-600 mt-2"><%= stats.totalProducts %></p>
				</div>

				<!-- Total Categories -->
				<div class="bg-white rounded-lg shadow p-6">
					<h2 class="text-sm text-gray-500 uppercase">Total Categories</h2>
					<p class="text-4xl font-bold text-green-600 mt-2"><%= stats.totalCategories %></p>
				</div>
			</div>

			<!-- Navigation Buttons -->
			<div class="bg-white rounded-lg shadow p-6 flex flex-col md:flex-row gap-4">
				<a
					href="/admin/products"
					class="flex-1 text-center bg-blue-600 text-white py-3 rounded-md hover:bg-blue-700 transition"
				>
					Manage Products
				</a>

				<a
					href="/admin/categories"
					class="flex-1 text-center bg-green-600 text-white py-3 rounded-md hover:bg-green-700 transition"
				>
					Manage Categories
				</a>
			</div>
		</div>
	</body>
</html>
